<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow  android:layout_height="1dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Bachelor of Engineering(BE)INFORMATION TECHNOLOGY"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="@font/convergence"
                android:background="@drawable/cellborder"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:id="@+id/tv_courseName"
                android:paddingBottom="20dp"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:text="Government College of Engineering,Aurangabad, MH -India"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="@font/convergence"
                android:background="@drawable/cellborder"
                android:id="@+id/tv_institutionName"
                android:padding="5dp"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:text="APRIL 2020"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="@font/convergence"
                android:background="@drawable/cellborder"
                android:id="@+id/tv_yearOfPassing"
                android:padding="5dp"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:text="7.32(VI SEM)"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:fontFamily="@font/convergence"
                android:background="@drawable/cellborder"
                android:id="@+id/tv_cgpa"
                android:padding="5dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>